<h1>Sign in</h1>

<%= form_tag sessions_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, nil, class: "form-control form-25" %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: "form-control form-25" %>
  </div>
  <%= submit_tag "Sign in", class: "btn btn-primary"%>
<% end %>
