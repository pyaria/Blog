<% if user_signed_in? %>
  <div class="col-md-6">
    <h1>Your Blog Posts</h1>
    <% @post.each do |post|%>
      <div>
        <h5><%= link_to post.title, post_path(post) %></h5>
        <p><%= post.body.truncate(25) %></p>
      </div>
    <% end %>
    <%= paginate @post %>
  </div>

  <div class="col-md-6">
    <h1>10 Most Recent Blog Posts</h1>
      <% @otherposts.each do |post|%>
      <div>
        <h5><%= link_to post.title, post_path(post) %></h5>
        <p><%= post.body.truncate(25) %></p>
      </div>
    <% end %>
  </div>

<% else %>
  <h1>A Sampling of Blog Posts</h1>
  <% @post.each do |post|%>
    <div>
      <h5><%= link_to post.title, post_path(post) %></h5>
      <p><%= post.body.truncate(25) %></p>
    </div>
  <% end %>
  <%= paginate @post %>
<% end %>
