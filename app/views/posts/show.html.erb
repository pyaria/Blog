<h1>Blog Post</h1>
<hr>
<h3><%= @p.title %></h3>
<p>Author: <%= @p.user.first_name %></p>
<p><%= @p.body %></p>
<%= link_to "Edit", edit_post_path(@p) %>
<%= link_to("Delete", post_path(@p), {method: :delete, data: {confirm: "Are you sure?"}}) %>
<hr>
<%= form_for [@post, @comment] do |c| %>
  <div class="form-group">
    <%= c.label :title %>
    <%= c.text_field :title, class: "form-control form-25"%>
  </div>
  <div class="form-group">
    <%= c.label :rating %>
    <%= c.radio_button :rating, "5" %>
    <%= c.label "5 stars" %>
    <%= c.radio_button :rating, "4" %>
    <%= c.label "4 stars" %>
    <%= c.radio_button :rating, "3" %>
    <%= c.label "3 stars" %>
    <%= c.radio_button :rating, "2" %>
    <%= c.label "2 stars" %>
    <%= c.radio_button :rating, "1" %>
    <%= c.label "1 star" %>
  </div>
  <div class="form-group">
    <%= c.label :body %>
    <%= c.text_area :body, class: "form-control form-25" %>
  </div>
  <%= c.submit %>
<% end %>

<hr>
<% @comments.each do |comment| %>
  <h3><%= generate_stars(comment.rating) %><%= comment.title %></h3>
  <p>Written by: <%= comment.user.first_name %></p>
  <p><%= comment.body %></p>
<% end %>
