<h1>Blog Post</h1>
<hr>
<h3><%= @p.title %></h3>
<p>Author: <%= @p.user.first_name %></p>
<p><%= @p.body %></p>
<%= link_to "Edit", edit_post_path(@p) %>
<%= link_to("Delete", post_path(@p), {method: :delete, data: {confirm: "Are you sure?"}}) %>
<hr>
<%= link_to "Make a Comment", new_comment_path %>
<% @c.each do |c| %>
  <h3><%= generate_stars(c.rating) %><%= c.title %></h3>
  <p>Written by: <%= c.user.first_name %></p>
  <p><%= c.body %></p>
<% end %>
