<%= form_for @post do |post| %>
  <div class="form-group">
    <%= post.label :title %>
    <%= post.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= post.label :body %>
    <%= post.text_area :body, class: "form-control", rows: 15%>
  </div>
  <div class="form-group">
    <%= post.label :public %>
    <%= post.check_box :public%>
  </div>
  <%= post.submit %>
<% end %>
