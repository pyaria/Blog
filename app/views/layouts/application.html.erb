<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid form-75">
    <%= link_to "Home", root_path %> |
    <%= link_to "About", '/about' %> |
    <%= link_to "New Post", new_post_path %> ||
    <% if user_signed_in? %>
      Welcome <%= current_user.first_name %> |
      <%= link_to("Log out", session_path(:user_id), {method: :delete, data: {confirm: "Are you sure?"}}) %>
    <% else %>
      <%= link_to "Sign up", new_user_path %> |
      <%= link_to "Log in", new_session_path %>
    <% end %>
  </div>
  <hr>
  <div class="container-fluid form-75">
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% elsif flash[:alert] %>
      <%= flash[:alert] %>
    <% end %>
  </div>
  <div class="container-fluid form-75">
    <%= yield %>
  </div>

</body>
</html>
